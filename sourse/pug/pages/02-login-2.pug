extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sProgram/_sProgram.pug
include ../blocks/sPerson/_sPerson.pug
include ../blocks/sNetworking/_sNetworking.pug

block variables
	- let  mainPage= null
block title
	- let  title= 'Войти в личный кабинет'
	title= title
block pagecontent
	//- +mob-mnu()
	+header()
		+top-nav()
	+page-title(title)
	+b.sLogin.section
		.container
			.row
				.col-xl-5.col-lg-6
					+form-wrap(class="form-wrap--border")
						+input("E-mail",'email','E-mail')
						+input("Пароль",'password','Пароль')
						.row.align-items-center
							.col-auto.col-md-6
								button.btn.btn-primary(type="submit") Войти
							.col-auto.col-md-6.my-2
								a(href="#") Востановить пароль
				.col-lg-4.col.offset-xl-2.offset-lg-1
					+e.caption
						p.pb-3 Регистрация участников происходит на #[a(href="#") Контур.Инфо]. Доступ к&nbsp;трансляции мероприятия имеют только действующие партнеры и&nbsp;сотрудники СКБ Контур.
						a.btn.btn-primary(href="#") Регистрация
