extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sProgram/_sProgram.pug
include ../blocks/sPerson/_sPerson.pug
include ../blocks/sNetworking/_sNetworking.pug

block variables
	- let  mainPage= null
block title
	- let  title= 'Регистрация'
	title= title
block pagecontent
	//- +mob-mnu()
	+header()
		+top-nav()
	+page-title(title)
	+b.sLogin.section
		.container 
			+b.form-wrap(class="form-wrap--border")
				form(action='/file-upload'  enctype="multipart/form-data")
					//- .dropzone(action='/file-upload'  enctype="multipart/form-data")
					.row
						.col-lg-6
							+input("",'text','Фамилия')
						.col-lg-6
							+input("",'text','Имя')
						.col-lg-6
							+input("",'email','Электронный адрес')
						.col-lg-6
							+input("",'tel','Телефон')
						.col-lg-6
							+input("",'text','Город ')
						.col-lg-6
							+input("",'text','Компания')
						.col-lg-6
							+input("",'text','Должность')
							+input("",'text','Пароль')
							+input("",'text','Повторите пароль')
						.col-lg-6
							label.dropzone-wrapper.d-block
								+b.dropzone(action='/file-upload')
									#dropzone
										+e.prev-wrap
											+icon("photo")
											span.strong Ваше фото
											+e.text  Формат&nbsp;3:4, jpeg, jpg png не&nbsp;более 1&nbsp;mb
											
										.fallback
											input(name='file', type='file', multiple='')
								+e.file Выбрать фото
						.col-lg-6.mb-4
							button.btn.btn-primary.w-100(type="submit") Зарегистрироваться
						.col-lg-6
							+in-c()
								+e.SPAN.text Я&nbsp;даю согласие на&nbsp;#[a(href="#") обработку персональных данных] и получение информационных сообщений от&nbsp;компании СКБ Контур
				
							+in-c()
								+e.SPAN.text Я&nbsp;принимаю условия #[a(href="#") договора на&nbsp;оказание услуг по&nbsp;проведению семинаров/вебинаров]
					 
	//- +headerBlock()
	//- +sProgram
	//- .bg-grad
	//- 	+sPerson
	//- 	+sNetworking 
	+sContact()
	+footer()


	